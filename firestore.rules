rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Settings (public read, admin-only write)
    match /settings/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Allow public reads for display collections, admin writes only
    match /slides/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /services/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /testimonials/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /partners/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /products/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /projects/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /team/{doc} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Messages: allow anyone to create (site visitors), admin-only read & delete
    match /messages/{doc} {
      allow create: if true;
      allow read, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Notifications: admin read/write
    match /notifications/{doc} {
      allow read, create, update, delete: if request.auth != null && request.auth.token.admin == true;
    }

    // Typing presence: read for admin, writes allowed for anyone
    match /typing/{doc} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow write: if true;
    }

    // Default: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
